

<div class="container form-inline">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">

      <% if @cocktail.errors.any? %>
      <ul>

        <% @cocktail.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>

      <% end %>

      <%= simple_form_for(@cocktail) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs text-center">

        <%= f.input :name, {class: 'form-control'} %>
        </div>
      <br>


      <div class="form-actions text-center">
        <%= f.button :submit %>
      </div>

      <br>
      <div class="text-center">
        <button><%= link_to 'Back', cocktails_path %></button>
      </div>


      <% end %>

    </div>
  </div>
</div>


