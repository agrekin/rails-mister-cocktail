<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">

        <h1><%= @cocktail.name %></h1>
       <ul>

        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %></li>
        <% end %>

        </ul>

        <button><%= link_to "Add A Dose", new_cocktail_dose_path(@cocktail)%></button>
        <button><%= link_to "All the cocktails", cocktails_path %></button>
        <button><%= link_to "Edit", edit_cocktail_path(@cocktail) %></button>
    </div>
  </div>
</div>


